{
  "version": 2,
  "builds": [
    {
      "src": "api/chat.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/chat.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "ANTHROPIC_API_KEY": "ANTHROPIC_API_KEY",
    "GOOGLE_API_KEY": "GOOGLE_API_KEY",
    "GROQ_API_KEY": "GROQ_API_KEY"
  }
}
